<UserControl x:Class="Modules.Administration.Views.AdministrationNavigationButton"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  x:Name="UserControl"
			 mc:Ignorable="d" 
			 Height="30" d:designWidth="150" FontFamily="Segoe UI" FontWeight="Thin"   FontSize="22">
	<Grid x:Name="grid" Background="#00000000">
		<RadioButton x:Name="TaskButton"
			Command="{Binding ShowAdministrationView1}"
			IsChecked="{Binding IsChecked1}"
			Foreground="#FFFBFBFB"
			Content="{Binding taskContent1, FallbackValue=Task1}" Style="{DynamicResource NavigationRadioButton}" 
					 FontSize="16" FontFamily="Segoe UI " FontWeight="Thin" Padding="0" />
	</Grid>
</UserControl>
